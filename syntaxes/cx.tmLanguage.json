{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "calyxium",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#builtin-types"
        },
        {
            "include": "#control-statements"
        },
        {
            "include": "#user-functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.hashtag.cx",
                    "match": "#.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.cx",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.cx",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.cx",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.cx",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.cx",
                    "match": "\\b(\\d+(\\.\\d+)?)\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.cx",
                    "match": "\\b(fn|let|const|true|false|import|export|class|new|return)\\b"
                }
            ]
        },
        "builtin-types": {
            "patterns": [
                {
                    "name": "storage.type.builtin-types.cx",
                    "match": "\\b(int|float|string|bool|byte)\\b"
                }
            ]
        },
        "control-statements": {
            "patterns": [
                {
                    "name": "keyword.control.cx",
                    "match": "\\b(if|else|for|switch|case|default|break)\\b"
                }
            ]
        },
        "user-functions": {
            "patterns": [
                {
                    "name": "entity.name.function.cx",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
                }
            ]
        }
    },
    "scopeName": "source.cx"
}
